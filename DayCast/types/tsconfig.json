{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/types": ["./types"],
      "@/types/*": ["./types/*"],
      "@/constants": ["./constants"],
      "@/constants/*": ["./constants/*"]
    }
  },
  "include": ["types/**/*", "constants/**/*"],
  "exclude": ["node_modules"]
}
