# ============================================
# 本番環境用
# ============================================

# データベース
DATABASE_URL="postgresql://user:password@db-host:5432/yoppy_production"

# AI Provider（本番環境推奨: Vertex AI）
AI_PROVIDER=vertexai
GCP_PROJECT_ID=your-production-gcp-project
GCP_LOCATION=asia-northeast1

# Weather Provider（本番環境推奨: OpenWeatherMap - 安定性重視）
WEATHER_PROVIDER=openweathermap
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# NextAuth
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-production-secret-use-strong-random-string

# Google OAuth
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# 環境
NODE_ENV=production
